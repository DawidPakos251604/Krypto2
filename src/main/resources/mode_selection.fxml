<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ModeSelectionController"
            prefHeight="200.0" prefWidth="400.0">

    <VBox alignment="CENTER" spacing="20" prefWidth="400" prefHeight="200">
        <Label text="Select operation mode"/>
        <HBox alignment="CENTER" spacing="20">
            <Button text="Use files" onAction="#openFileMode"/>
            <Button text="Use text field" onAction="#openTextMode"/>
        </HBox>
    </VBox>
</AnchorPane>
